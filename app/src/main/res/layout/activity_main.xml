<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Enter Name"
        android:ems="7"
        android:textSize="33sp"
        android:id="@+id/editText1"
        android:textColor="#000000"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/editText2" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Enter Password"
        android:ems="7"
        android:textSize="33sp"
        android:id="@+id/editText2"
        android:password="true"
        android:textColor="#000000"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <com.gc.materialdesign.views.ButtonFlat
        android:id="@+id/buttonflat"
        android:layout_width="125sp"
        android:layout_height="70sp"
        android:background="#ff4350f1"
        android:text="Submit"
        android:onClick="buttonflatOnClick"
        android:layout_marginTop="94dp"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Soldier Name"
        android:id="@+id/textView"
        android:textSize="18sp"
        android:gravity = "center"
        android:textColor="#ff0d00ff"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/buttonflat"
        android:layout_alignEnd="@+id/buttonflat"
        android:layout_marginRight="39dp"
        android:layout_marginEnd="39dp" />




    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Soldier Password"
        android:id="@+id/textView2"
        android:textSize="18sp"
        android:textColor="#ff0d00ff"
        android:gravity = "center"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/editText1"
        android:layout_alignRight="@+id/buttonflat"
        android:layout_alignEnd="@+id/buttonflat" />


</RelativeLayout>
